FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      turbineArrayProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
 
globalProperties
{
    outputControl       "timeStep";
    outputInterval       1;
}


// NacYaw:
// This is the initial or fixed nacelle yaw angle. It is positive counterclockwise when looking down
// on the turbine (rotate about z-axis). This value must be greater than â€“180 and less than or equal to 180 degrees.
turbine1
{
    turbineType         "DOE-Tidal-Ref-Model_LabScale";
    baseLocation        (1.35 0.5 0.0);   // account for OverHang distance
    numBladePoints      30;
    pointDistType       "uniform";
    pointInterpType     "linear";
    bladeUpdateType     "oldPosition";
    // epsilon             0.052600;       // mesh = coarse
    epsilon             0.025000;       // mesh = Coarse-e1
    // epsilon             0.029125;       // mesh = Coarse-e2
    // epsilon             0.033250;       // mesh = Coarse-e3
    // epsilon             0.037500;       // mesh = Coarse-e4
    // epsilon             0.032875;       // mesh = medium 1
    // epsilon             0.026300;       // mesh = medium 2
    // epsilon             0.019725;       // mesh = medium 3
    // epsilon             0.017884;       // mesh = fine
    tipRootLossCorrType "Glauert";
    rotationDir         "ccw";
    Azimuth             0;
    TorqueGen                                                9999.9;
    // RotSpeed            289.45;      // for U_inflow = 1.1 m/s TSR = 6.2
    RotSpeed            267.38;      // for U_inflow = 0.9 m/s TSR = 7.0
    Pitch               0;
    NacYaw              -90;
    fluidDensity        1000.0;
}

