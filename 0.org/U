FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U.uniform;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 1 -1 0 0 0 0 ];

internalField   uniform ( 1.1 0 0 );

boundaryField
{
    bottom
    {
      // type cyclic;
      type slip;
      // type zeroGradient
    }
 
    top
    {
      // type cyclic;
      type slip;     
      // type zeroGradient       
    }

    // inlet
    west
    {
      type            fixedValue;
      value           uniform ( 1.1 0 0 );
    }

    // outlet
    east
    {
      type            zeroGradient;
    }

    north
    {
      // type cyclic;
      type slip;  
      // type zeroGradient          
    }

    south
    {
      // type cyclic;
      type slip; 
      // type zeroGradient           
    }
}


