FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U.uniform;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// InflowSpeed 1.9; 
InflowSpeed 1.34350;  // adjust inflow of 1.9 m/s at angle 45 degrees


dimensions      [ 0 1 -1 0 0 0 0 ];

// internalField   uniform ( $InflowSpeed 0 0 );
internalField   uniform ( $InflowSpeed $InflowSpeed 0 ); // adjust inflow of 1.9 m/s at angle 45 degrees

boundaryField
{
    bottom
    {
      // type cyclic;
      type slip;
      // type zeroGradient
    }
 
    top
    {
      // type cyclic;
      type slip;     
      // type zeroGradient       
    }


    // inlet
    north
    {
      // type cyclic;
      // type slip;  
      // type zeroGradient  
      type            fixedValue;
      value           uniform ( $InflowSpeed $InflowSpeed 0 ); // adjust inflow of 1.9 m/s at angle 45 degrees        
    }

    // inlet
    west
    {
      // type cyclic;
      // type slip;  
      // type zeroGradient  
      type            fixedValue;
      value           uniform ( $InflowSpeed $InflowSpeed 0 ); // adjust inflow of 1.9 m/s at angle 45 degrees
    }

    // outlet
    south
    {
      // type cyclic;
      // type slip; 
      type zeroGradient           
    }

    // outlet
    east
    {
      // type cyclic;
      // type slip; 
      type zeroGradient;
    }

}


